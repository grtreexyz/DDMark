.container{
  position: fixed;
  top:0;
  left:0;
  width:100vw;
  height:100vh;
  display: block;
  align-items: center;
  box-sizing: border-box;
  margin: 0;
  border: 0;
  outline: 0;
  padding: 0;
  overflow: hidden;
}
.tools{
  position: absolute;
  bottom:0;
  left:0;
  height:40px;
  width:100%;
  display: flex;
  z-index: 2;
}
.cvs{
  width:200px;
  height:200px;
  overflow: hidden;
  box-sizing: border-box;
  padding-bottom: 40px;
  z-index: 1;
}
.box{
  width:100%;
  height:100%;
  overflow: hidden;
}
button{
  flex: 1;
  border-radius: 0;
  outline: 0;
  margin: 0;
  padding: 0;
  font-size: 14px;
  line-height: 40px;
}
