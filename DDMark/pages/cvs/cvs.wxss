.container{
  position: fixed;
  top:0;
  left:0;
  width:100vw;
  height:100vh;
  display: block;
  align-items: center;
  box-sizing: border-box;
  margin: 0;
  border: 0;
  outline: 0;
  padding: 0;
  overflow: hidden;
}
.tools{
  height:40px;
  width:100%;
  display: flex;
}
button{
  flex: 1;
  border-radius: 0;
  outline: 0;
  margin: 0;
  padding: 0;
  font-size: 14px;
  line-height: 40px;
}
