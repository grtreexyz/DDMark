.container{
  width:100vw;
  height:100vh;
  display: block;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  margin: 0;
  border: 0;
  outline: 0;
  padding: 0;
}
.choose{
  position:absolute;
  top:30vh;
  left:30vw;
  border-radius: 50%;
  width:40vw;
  height:40vw;
  text-align:center;
  font-size: larger;
  line-height:40vw;
}

.bottombar{
  position: absolute;
  bottom:0;
  left:0;
  width:100%;
  display: flex;
  height: 30px;
}
.bottombar navigator{
  flex: 1;
  height: 30px;
  border-radius: 0;
  outline: none;
  margin: 0;
  padding: 0;
  border: 1px solid #eee;
  text-align: center;
  line-height: 30px;
  font-size: 12px;
  background-color: #f8f8f8;
}